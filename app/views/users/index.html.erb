<div class="row-fluid">
  <div class="span12">
    <h1>Listing Users</h1>
    <table class="table">
      <tr>
        <th></th>
        <th>Name</th>
        <th>Email</th>
        <th></th>
      </tr>

      <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.id, user %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-success' %></td>
        </tr>
      <% end %>
    </table>

    <br />

    <%= link_to 'New user', new_user_path, class: 'btn btn-primary' %>
  </div>
</div>
