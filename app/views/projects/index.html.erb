<div class="row-fluid">
  <div class="span12">
    <h1>Listing projects</h1>
    <table class="table">
      <tr>
        <th></th>
        <th>Name</th>
        <th>Description</th>
        <th></th>
        <th></th>
      </tr>

      <% @projects.each do |project| %>
        <tr>
          <td><%= link_to project.id, project %></td>
          <td><%= link_to project.name, project %></td>
          <td><%= project.description %></td>
          <td><%= link_to 'Edit', edit_project_path(project), class: 'btn btn-success' %></td>
          <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </table>

    <br />

    <%= link_to 'New Project', new_project_path, class: 'btn btn-primary' if can? :create, Project %>
  </div>
</div>
